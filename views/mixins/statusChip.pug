mixin statusChip(text, variant, titleText)
  - const cls = {
  -   green:  'bg-green-100 text-green-800 border border-green-200',
  -   gray:   'bg-gray-100 text-gray-800 border border-gray-200',
  -   amber:  'bg-yellow-100 text-yellow-800 border border-yellow-200',
  -   red:    'bg-red-100 text-red-800 border border-red-200',
  -   rose:   'bg-pink-100 text-pink-800 border border-pink-200'
  - }[variant] || 'bg-gray-100 text-gray-800 border border-gray-200';
  span(class=`inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium ${cls}` title=titleText)
    = text
