extends ../layouts/dashboard-layout.pug

block content
  h1.text-3xl.font-bold.mb-6 Welcome, #{user.firstName}

  div.grid.grid-cols-2.gap-6
    div.bg-white.shadow-lg.p-6.rounded-xl
      h2.text-xl.font-semibold.text-red-800 Training Access
      p.mt-2.text-gray-700 Access your training materials by belt and category.

    div.bg-white.shadow-lg.p-6.rounded-xl
      h2.text-xl.font-semibold.text-red-800 Training Log
      p.mt-2.text-gray-700 View or add to your recent training entries.

    div.bg-white.shadow-lg.p-6.rounded-xl
      h2.text-xl.font-semibold.text-red-800 Edit Profile
      p.mt-2.text-gray-700 Manage your personal and training information.
