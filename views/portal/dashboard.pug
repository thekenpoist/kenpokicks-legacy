extends ../layouts/main-layout.pug

block content
  h1(class="text-3xl font-bold kenpo-font mb-4") Welcome to Your Dashboard

  if currentUser
    p(class="text-lg mb-2") Hello, #{currentUser.firstName}!
    p(class="text-gray-600") You're logged in as #{currentUser.username} (#{currentUser.email})
    p(class="mt-4 text-green-700 font-semibold") Status: Verified

    a(href="/logout" class="inline-block mt-6 text-red-700 hover:underline") Log out
  else
    p(class="text-red-700") No user session found.
