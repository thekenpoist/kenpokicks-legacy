extends ../../layouts/admin-layout.pug

block content

  if errorMessage
    .text-red-600.text-sm.mb-4 #{errorMessage}

  if allAdminLogs && allAdminLogs.length
    .grid.grid-cols-4.font-semibold.text-gray-600.border-b.border-gray-300.pb-2.mb-2.text-sm
      div Date
      div Action
      div Entity Label 
      div Actor

    each log in allAdminLogs
      a(
        href=`/logs/${log.id}`
        id=`log-${log.id}`
        class="block grid grid-cols-4 text-sm text-gray-800 border-b border-gray-100 py-2 hover:bg-gray-50"
      )
        div= fmt ? fmt(log.actionDate, 'MMM d, yyyy, h:mm a') : new Date(log.actionDate).toLocaleString()
        div= log.action
        div= log.entityLabel
        div= log.actor
  else
    .text-gray-500 No admin logs found.

  a(class="inline-block mt-6 text-blue-600 hover:underline text-sm" href="/admin") ‚Üê Back to Admin Console
