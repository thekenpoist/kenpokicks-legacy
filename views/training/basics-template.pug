extends ../layouts/dashboard-layout

block content
  .container.mx-auto.p-6
    h1.text-2xl.font-bold.mb-4.text-center #{beltColor.charAt(0).toUpperCase() + beltColor.slice(1)} Belt Basics

    div(class="grid grid-cols-1 md:grid-cols-2 gap-8")
      // LEFT COLUMN — Fundamentals
      .space-y-1
        if content.stances && content.stances.length
          h2.text-lg.font-semibold.text-red-700.mt-4 Stances
          ul.list-disc.pl-6
            each item in content.stances
              li= item

        if content.blocks && content.blocks.length
          h2.text-lg.font-semibold.text-red-700.mt-4 Blocks
          ul.list-disc.pl-6
            each item in content.blocks
              li= item

        if content.elbows && content.elbows.length
          h2.text-lg.font-semibold.text-red-700.mt-4 Elbows
          ul.list-disc.pl-6
            each item in content.elbows
              li= item

        if content.strikes && content.strikes.length
          h2.text-lg.font-semibold.text-red-700.mt-4 Strikes
          ul.list-disc.pl-6
            each item in content.strikes
              li= item

      // RIGHT COLUMN — Techniques, Forms
      .space-y-1
        if content.kicks && content.kicks.length
          h2.text-lg.font-semibold.text-red-700.mt-4 Kicks
          ul.list-disc.pl-6
            each item in content.kicks
              li= item

        if content.matWork && content.matWork.length
          h2.text-lg.font-semibold.text-red-700.mt-4 Mat Work
          ul.list-disc.pl-6
            each item in content.matWork
              li= item

  a(class="inline-block mt-6 text-blue-600 hover underline text-sm" href="/portal/dashboard") ← Back to Dashboard

