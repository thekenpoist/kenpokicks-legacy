extends ../layouts/admin-layout.pug

block content
  .flex.items-center.justify-between.mb-6
    a(href="/admin" class="text-blue-600 hover:underline") ‚Üê Back to Admin Console

  .bg-white.shadow-lg.rounded-xl.p-6
    // make the list area scrollable (see #2)
    .mt-2(style="max-height: calc(100vh - 260px); overflow-y: auto;")
      if techniques && techniques.length
        ul.divide-y.divide-gray-200
          each technique in techniques
            li.py-3
              a(href=`/techniques/${technique.techId}/edit`, class="text-blue-600 hover:underline") #{technique.techTitle}
      else
        p.text-gray-500 No techniques found.
