extends ../layouts/dashboard-layout.pug

block content
  .bg-white.shadow-lg.rounded-xl.p-6.max-w-3xl.mx-auto
    h1.text-2xl.font-bold.text-red-800.mb-4 #{log.logTitle}

    .text-sm.text-gray-500.mb-6
      | Date: 
      span.text-gray-700.ml-1 #{new Date(log.logDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
      |  • Category: 
      span.text-gray-700.ml-1 #{log.logCategory}
      |  • Intensity: 
      span.text-gray-700.ml-1 #{log.logIntensity}
      if log.logRelatedBelt && log.logRelatedBelt !== 'N/A'
        |  • Related Belt: 
        span.text-gray-700.ml-1 #{log.logRelatedBelt}
      |  • Duration: 
      span.text-gray-700.ml-1 #{log.logDuration} min

    if log.logIsPrivate
      .text-sm.text-red-600.mt-1 (Private Entry)

    hr.my-4

    h2.text-lg.font-semibold.text-gray-800.mb-2 Description
    p.text-gray-700.whitespace-pre-line.mb-6 #{log.logDescription}

    .flex.justify-between.mt-6
      a(href=`/logs/edit/${log.logId}`, class="bg-red-800 hover:bg-green-700 text-white px-4 py-2 rounded text-sm transition") Edit Entry

      form(action=`/logs/delete/${log.logId}`, method="POST", onsubmit="return confirm('Are you sure you want to delete this log?');")
        button(type="submit", class="bg-gray-300 hover:bg-red-600 text-black hover:text-white px-4 py-2 rounded text-sm transition") Delete Entry

    .mt-8.text-center
      a(href="/logs", class="text-blue-600 hover:underline text-sm") ← Back to All Logs
